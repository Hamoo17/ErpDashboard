<EditForm Model="Model" OnInvalidSubmit="Save">
	<FluentValidationValidator @ref="_fluentValidationValidator" />
	<MudDialog>
		<TitleContent>
			@if (Model.Id == 0)
			{
				<MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        Add Plan Days
                    </MudText>
			}else
			{
				<MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                      Edit Plan Days
                    </MudText>
			}
		</TitleContent>
		<DialogContent>
			 <MudGrid>
				  <MudItem xs="12" md="6">
                    <MudTextField  For="@(() => Model.Name)" @bind-Value="Model.Name" Label="Name" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => Model.DayCount)" @bind-Value="Model.DayCount" Label="Days Count" />
                </MudItem>
			 </MudGrid>
		</DialogContent>
		<DialogActions>
			 <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
			 <MudButton DisableElevation Variant="Variant.Filled" OnClick="Save" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Secondary">@(Model.Id == 0?"Add":"Save")</MudButton>
		</DialogActions>
	</MudDialog>
</EditForm>