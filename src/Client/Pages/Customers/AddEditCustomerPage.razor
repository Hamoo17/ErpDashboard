<EditForm Model="Model" OnInvalidSubmit="Save">
	<MudDialog >
		<TitleContent >
			@if (Model.Id == 0)
			{
				<MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        Add Customer
                    </MudText>
			}else
			{
				<MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                      EditCustomer
                    </MudText>
			}
		</TitleContent>
		<DialogContent >
			 <MudGrid>
				<MudItem xs="12" md="6">
                    <MudTextField For="@(() => Model.CustomerName)" @bind-Value="Model.CustomerName" Label="Customer Name" />
                </MudItem>
				<MudItem xs="12" md="6">
                    <MudTextField   For="@(() => Model.CustomerName)" @bind-Value="Model.CustomerName" Label="Name" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => Model.Email)" @bind-Value="Model.Email" Label="Days Count" />
                </MudItem>

			 </MudGrid>
		</DialogContent>
		<DialogActions>
			 <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
			 <MudButton DisableElevation Variant="Variant.Filled" OnClick="Save" ButtonType="ButtonType.Submit"  Color="Color.Secondary">@(Model.Id == 0?"Add":"Save")</MudButton>
		</DialogActions>
	</MudDialog>
</EditForm>

